@{
    ViewData["Title"] = "Home";
}

<h4>Recent Favorite Games</h4>

<div id="myCarousel" class="carousel slide my-carousel" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/GameCovers/WargameRedDragon.jpg" alt="Wargame:RedDragon" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <div class="carousel-title">
                        A more realistic approach to the <b>RTS</b> Genre. Has a deck-builder with an equally high amount of units to choose from.
                    </div>
                    <br />
                    <a class="btn btn-default" href="">
                        Check Review
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/GameCovers/Eden.jpg" alt="Eden" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <div class="carousel-title">
                        A beautiful and well-written <b>Kinetic Visual Novel</b> from 2009 that still holds up today.
                    </div>
                    <br />
                    <a class="btn btn-default" href="">
                        Check Review
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/GameCovers/XenobladeChronicles2.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <div class="carousel-title">
                        A large and expansive <b>RPG</b> on the Switch from one of my favorite franchises.
                    </div>
                    <br />
                    <a class="btn btn-default" href="">
                        Check Review
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

